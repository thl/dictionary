<h1>Editing Language</h1>
<%= error_messages_for :language %>
<% form_for(:language, :url => language_path(@language), :html => { :method => :put }) do |f| %>
  <p>
    <b>Language Name</b><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <b>Code (ISO 369-3)</b><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <b>Locale</b><br />
    <%= f.text_field :locale %>
  </p>
  <p>
    <b>Use for Interface</b> <%= f.check_box :use_for_interface %>
  </p>
  <p>
    <b>Unicode Codepoint Start</b><br />
    <%= f.text_field :unicode_codepoint_start %>
  </p>
  <p>
    <b>Unicode Codepoint End</b><br />
    <%= f.text_field :unicode_codepoint_end %>
  </p>
  <p>
    <%= submit_tag 'Update' %>
  </p>
<% end %>
<p>
<%= link_to 'Show', language_path(@language) %> |
<%= link_to 'Back', languages_path %>
</p>