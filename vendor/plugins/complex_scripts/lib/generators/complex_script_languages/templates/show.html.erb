<% @breadcrumb2 = link_to h(@language.title ), language_path(@language) %>
<%= display_if_not_blank 'Language Name', h(@language.title).s %>
<%= display_if_not_blank 'Code', h(@language.code).s %>
<%= display_if_not_blank 'Locale', h(@language.locale).s %>
<%= display_if_not_blank 'Use for Interface', (@language.use_for_interface ? 'Yes' : 'No') %>
<%= display_if_not_blank('Unicode Range', "#{@language.unicode_codepoint_start} - #{@language.unicode_codepoint_end}") if !@language.unicode_codepoint_start.nil? && !@language.unicode_codepoint_end.nil? %>
<p>
<%= link_to 'Edit', edit_language_path(@language) %> |
<%= link_to 'Delete', language_path(@language), :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'Back', languages_path %>
</p>