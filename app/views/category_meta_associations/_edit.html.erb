
<%
    data = Category.find(data_id)
    model_name = 'meta'

	case data_id
	  when 236
		target_update_div = "#{@meta.id}_meta_project_type_div"	
	  when 184
		target_update_div = "#{@meta.id}_meta_language_type_div"	

	end
%>

  <% form_for :meta, :url => category_meta_associations_path(@meta, @branch) do |f| %>
    <table class='mobj' border='0' cellspacing='0'>
		<%=
			category_fields :subject => {:display => '', :label => ''},
							:field_human_name => '',
							:root =>  data, 
							:var_name => model_name, 
							:field_name => [:category_meta_associations, :category],
							:conditions => {:category_branch_id => @branch.id}, 
							:include_js => true, 
							:include_styles => false, 
							:selectable => true, 
							:single_selection => false
		%> 
	<tr><td></td></tr>
	</table>
    <br/>
    <%= submit_to_remote 'update_button','update', :url => category_meta_associations_path(@meta, @branch), :update => "#{target_update_div}" %>
    <%= link_to_remote 'cancel', {:url => category_meta_associations_path(@meta, @branch), :function_name => @function_name, :method => 'get', :update => "#{target_update_div}" } %>
  <% end %>

