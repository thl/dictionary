<% 
@data = Category.find(data_id)
@definition = Definition.find(id)
@model_name = 'definition'
@function_name = function_name
@id = id
@update_id = update_id
%>

<% if @function_name == 'thematic_classification_type' %>
  <% form_for :definition, :url => { :action => "update_thematic_classification" } do |f| %>
    <%= f.hidden_field :id %>
    <%= category_selector(@data, @model_name, @function_name, true, :hasTree => 'true', :singleSelectionTree => 'true') %>
    <br/>
    <%= submit_to_remote 'update_button','update', :url => { :action => "update_thematic_classification" }, :update => "thematic_classification_type#{id}" %>
    <%= link_to_remote 'cancel', {:url => thematic_classification_show_path(params['id']), :method => 'get', :update => "thematic_classification_type#{id}" } %>
  <% end %>
