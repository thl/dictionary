<%  if d.video_description == nil or d.video_description == ''
  t_videodescription = 'Click to modify'
else
  t_videodescription = d.video_description
end %>
<%=  "#{link_to_remote("#{t_videodescription}", :url => edit_path, :update => "#{d.id}_videodescdiv", :method => :get ) }" %>