			               t_metatitle = 'Click to modify'
			             else
			               t_metatitle = meta.title.s      
			             end %>
					  <%= link_to_remote(t_metatitle, :url => edit_path, :update => "#{meta.id}_metatitlediv", :method => :get ) %>
