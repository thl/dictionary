<%= tagged_tinymce_script %>
<% form_for :definition, :url => { :action => "update_definition" } do |f| %>
<p>
<%= f.hidden_field :id %>
<%= f.text_area :definition, :class => 'mceEditor' %>
<%= submit_to_remote 'update_button','update definition', :url => { :action => "update_definition" }, :update => "#{d.id}_defdiv", :before => "tinyMCE.triggerSave();" %>
<%= link_to_remote 'Cancel', :url => {:action => "definition_show", :params => {'id' => params['id'] }}, :update => "#{d.id}_defdiv" %>
</p>
<% end %>
