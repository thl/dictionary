<%= wide_tagged_tinymce_script %>
<% form_for :definition, :url => { :action => "update_video_description" } do |f| %>
<p>
<%= f.hidden_field :id %>
<%= f.text_area :video_description, :class => 'mceEditor' %>
<%= submit_to_remote 'update_button','update video Description', :url => { :action => "update_video_description" }, :update => "#{d.id}_videodescdiv", :before => "tinyMCE.triggerSave();" %>
<%= link_to_remote 'Cancel', :url => {:action => "video_description_show", :params => {'id' => params['id'] }}, :update => "#{d.id}_videodescdiv" %>
</p>
<% end %>