<% 
@data = Category.find(data_id)
@definition = Definition.find(id)
@model_name = 'definition'
@function_name = function_name
@id = id
@update_id = update_id
%>

<% if @function_name == 'thematic_classification_type' %>
<%=   @definition.thematic_classification_type.title  if !@definition.thematic_classification_type.blank?%>
<%  edit_path = thematic_classification_edit_url(:id => @definition.id)
      t_definition = 'Click to modify Thematic Clasification'  %>
<%#=  "#{link_to_remote(image_tag('pencil.png',:border => 0), :url => edit_path, :update => "thematic_classification_type#{@definition.id}", :method => :get, :html => {:class => 'definitions_show'} ) }" %>
<% else
    if @function_name == 'grammatical_function_type' %>
<%=      @definition.grammatical_function_type.title if !@definition.grammatical_function_type.blank? %>
<%  else
      if @function_name == 'register_type' %>
<%=     @definition.register_type.title  if !@definition.register_type.blank? %>
<%    else
        if @function_name == 'language_context_type' %>
<%=       @definition.language_context_type.title  if !@definition.language_context_type.blank? %>
<%      else
          if @function_name == 'literary_genre_type' %>
<%=         @definition.literary_genre_type.title  if !@definition.literary_genre_type.blank? %>
<%        else
            if @function_name == 'literary_period_type' %>
<%=           @definition.literary_period_type.title  if !@definition.literary_period_type.blank? %>
<%          else
              if @function_name == 'literary_form_type' %>
<%=             @definition.literary_form_type.title  if !@definition.literary_form_type.blank? %>
<%            end %>
<%          end %>
<%        end %>
<%      end %>
<%    end %>
<%  end %>
<% end %>