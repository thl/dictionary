<%= wide_tagged_tinymce_script %>
<% show_action = tinymce_show_action(params[:action]) 
   update_action = tinymce_update_action(params[:action])
   controller = params[:controller] 
   field = tinymce_field(params[:action])
%>
<% form_for controller.singularize, :url => { :action => "update_analytical_note" } do |f| %>
<p>
<%= f.hidden_field :id %>
<%= f.text_area field, :class => 'mceEditor' %>
<%= submit_to_remote 'update_button','Update', :url => { :controller => controller, :action => update_action}, :update => "#{t.id}#{divsuffix}", :before => "tinyMCE.triggerSave();" %>
<%= link_to_remote 'Cancel', :url => { :controller => controller, :action => show_action, :params => {'id' => params['id'] }}, :update => "#{t.id}#{divsuffix}" %>
</p>
<% end %>