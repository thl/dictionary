<h1>Search Translation</h1>
<%= form_tag({:action => "searchaction"}, {:method => 'get',:name => "searchform"})  %>
<%= link_to_function(image_tag("search_up.gif", :size => "87x19", :border => 0, :alt => "search", :name => "search1"), "document.searchform.submit()", {:onMouseOut => "MM_swapImgRestore();", :onMouseOver => "MM_swapImage('search1','','/images/search_down.gif',1);"}) %>
  <table>
  <%= search_translation %>
  <tr><td><b><label>Definition:</label></b></td>
  <td><input name="definition" size=50 type=text value="" /></td></tr>
  <tr><td><b><label>Oral quotation:</label></b></td>
  <td><input name="oral_quotation" size=50 type=text value="" /></td></tr>
  <tr><td><b><label>Model sentence:</label></b></td>
  <td><input name="model_sentence" size=50 type=text value="" /></td></tr>
  <tr><td><b><label>Meta:</label></b></td>
  <td><input name="meta" size=50 type=text value="" /></td></tr>
  <tr><td><b><label>Etymology:</label></b></td>
  <td><input name="etymology" size=50 type=text value="" /></td></tr>
  <tr><td><b><label>Literary quotation:</label></b></td>
  <td><input name="literary_quotation" size=50 type=text value="" /></td></tr>
  </table>
  <input type="hidden" name="translation[id]" value="<%= params["id"] %>"/> 
<%= link_to_function(image_tag("search_up.gif", :size => "87x19", :border => 0, :alt => "search", :name => "search2"), "document.searchform.submit()", {:onMouseOut => "MM_swapImgRestore();", :onMouseOver => "MM_swapImage('search2','','/images/search_down.gif',1);"}) %>
<%= end_form_tag %>
