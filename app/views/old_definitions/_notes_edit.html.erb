<%= wide_tagged_tinymce_script %>
<% form_for :old_definition, :url => { :action => "update_notes" } do |f| %>
<p>
<%= f.hidden_field :id %>
<%= f.text_area :notes, :class => 'mceEditor' %>
<%= submit_to_remote 'update_button','update notes', :url => { :action => "update_notes" }, :update => "#{d.id}_anotediv", :before => "tinyMCE.triggerSave();" %>
<%= link_to_remote 'Cancel', {:url => old_definition_notes_show_path(params['id']), :method => 'get', :update => "#{d.id}_anotediv" } %>
</p>
<% end %>