<%= tagged_tinymce_script %>
<% form_for :etymology, :url => { :action => "update_image_description" } do |f| %>
<p>
<%= f.hidden_field :id %>
<%= f.text_area :image_description, :class => 'mceEditor' %>
<%= submit_to_remote 'update_button','update Image Description', :url => { :controller => 'etymologies', :action => "update_image_description" }, :update => "#{e.id}_imagedescdiv", :before => "tinyMCE.triggerSave();" %>
<%= link_to_remote 'Cancel', :url => {:action => "image_description_show", :params => {'id' => params['id'] }}, :update => "#{e.id}_imagedescdiv" %>
</p>
<% end %>